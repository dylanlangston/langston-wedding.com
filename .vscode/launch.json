    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            "name": "Build - Frontend",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "build"
            ],
            "cwd": "${workspaceFolder}/Frontend/",
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Develop - Frontend",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "cwd": "${workspaceFolder}/Frontend/",
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
        },
        {
            "name": "Test - Frontend",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "test"
            ],
            "cwd": "${workspaceFolder}/Frontend/",
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        }
    ]
}